<div class='container'>
  <div class="jumbotron">
    <h1><%= @artist.id ? ('Edit Artist') : ('Add Artist') %></h1>
      <div class="form artist-form">
        <%= form_for @artist do |f| %>
        <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :rank %>
            <%= f.text_field :rank %>
          </div>
          <div class="form-group">
            <%= f.label :homepage %>
            <%= f.text_field :homepage %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label "Main Image" %>
            <%= f.file_field :main_img %>
          </div>
          <div class="form-group">
            <%= f.label "Background Image" %>
            <%= f.file_field :background_img %>
          </div>
        </div>
        <%= f.submit%>
      <% end %>
    </div>
  </div>
</div>
