<div class="container-fluid">
	<div class="row">
		<div class="col-md-9">
			<div class="jumbotron artist-music">
				<h1 class='artist-header'><%= @artist.name %></h1>
				<iframe
					width="100%"
					height="400"
					scrolling="no"
					frameborder="no"
					allow="autoplay"
					src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/<%= @artist.soundcloud_id %>&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true">
					</iframe>
				<p>
					<%= link_to 'Artist Website', @artist.homepage, class: 'btn btn-dark btn-large' %>
				</p>
			</div>
		</div>
		<div class="tilt tilt-logo" data-tilt data-tilt-glare="true" data-tilt-scale="1.1">
		<span class="tilt-logo-inner">
			tilt.js
		</span>
</div>
	</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" ></script>

<!-- https://github.com/gijsroge/tilt.js -->
<script src="https://unpkg.com/tilt.js@1.1.21/dest/tilt.jquery.min.js"></script>
